{
  "name": "gordywills/receiver-control",
  "description": "a single page app to remotely control my Pioneer VSX-930 receiver via telnet",
  "type": "project",
  "prefer-stable": true,
  "minimum-stability": "dev",
  "license": "MIT",
  "authors": [
    {
      "name": "Gordy Wills",
      "email": "gordy.wills@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "ReceiverControl\\": "src/"
    }
  },
  "require": {
    "php": "^7.3",
    "ext-dom": "*",
    "ext-json": "*",
    "beberlei/assert": "^2.9",
    "slim/slim": "4.0.0-alpha",
    "slim/psr7": "dev-master",
    "slim/php-view": "^2.2"
  },
  "require-dev": {
    "phpstan/phpstan": "@stable",
    "phpstan/phpstan-deprecation-rules": "@stable",
    "phpstan/phpstan-strict-rules": "@stable",
    "roave/security-advisories": "dev-master",
    "slevomat/coding-standard": "@stable"
  },
  "scripts": {
    "phpcs": "./vendor/bin/phpcs --cache=./.phpcs.cache.php --standard=phpcs.xml -sp",
    "phpcbf": "./vendor/bin/phpcbf --standard=phpcs.xml -p",
    "phpstan": "./vendor/bin/phpstan analyse"
  }
}
