{
  "name": "gordywills/receiver-control",
  "description": "a single page app to remotely control my Pioneer VSX-930 receiver via telnet",
  "type": "project",
  "prefer-stable": true,
  "minimum-stability": "dev",
  "license": "MIT",
  "authors": [
    {
      "name": "Gordy Wills",
      "email": "gordy.wills@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "ReceiverControl\\": "src/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": "~7.4",
    "ext-dom": "*",
    "ext-json": "*",
    "beberlei/assert": "^2.9",
    "bower-asset/bootstrap": "^4.3",
    "bower-asset/jquery": "^3.4",
    "bower-asset/open-iconic": "^1.1",
    "fxp/composer-asset-plugin": "^1.4",
    "slim/php-view": "^2.2",
    "slim/psr7": "^0.6.0",
    "slim/slim": "^4.3"
  },
  "require-dev": {
    "phpstan/phpstan": "@stable",
    "phpstan/phpstan-deprecation-rules": "@stable",
    "phpstan/phpstan-strict-rules": "@stable",
    "rector/rector": "@stable",
    "roave/security-advisories": "dev-master",
    "slevomat/coding-standard": "@stable",
    "squizlabs/php_codesniffer": "@stable"
  },
  "scripts": {
    "phpcs": "vendor/bin/phpcs --cache=./.phpcs.cache.php --standard=phpcs.xml -sp",
    "phpcbf": "vendor/bin/phpcbf --standard=phpcs.xml -p",
    "phpstan": "vendor/bin/phpstan analyse",
    "rector": "vendor/bin/rector process src"
  }
}
