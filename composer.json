{
  "name": "holtkamp/receiver-control",
  "description": "a single page app to remotely control my receiver",
  "type": "project",
  "prefer-stable": true,
  "minimum-stability": "dev",
  "autoload": {
    "psr-4": {
      "ReceiverControl\\": "src/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/holtkamp/PHP-View.git"
    }
  ],
  "require": {
    "php": "^7.4 || ^8.0",
    "ext-dom": "*",
    "ext-json": "*",
    "beberlei/assert": "^2.9",
    "bower-asset/bootstrap": "^4.3",
    "bower-asset/jquery": "^3.4",
    "bower-asset/open-iconic": "^1.1",
    "fxp/composer-asset-plugin": "^1.4",
    "slim/php-view": "dev-allow-php-8",
    "slim/psr7": "^1.0",
    "slim/slim": "^4.3"
  },
  "require-dev": {
    "phpstan/phpstan": "@stable",
    "phpstan/phpstan-deprecation-rules": "@stable",
    "phpstan/phpstan-strict-rules": "@stable",
    "rector/rector": "@stable",
    "roave/security-advisories": "dev-master",
    "slevomat/coding-standard": "@stable",
    "squizlabs/php_codesniffer": "@stable"
  }
}
