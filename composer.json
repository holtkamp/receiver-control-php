{
  "name": "gordywills/receiver-control",
  "description": "a single page app to remotely control my Pioneer VSX-930 receiver via telnet",
  "type": "project",
  "prefer-stable": true,
  "minimum-stability": "dev",
  "license": "MIT",
  "authors": [
    {
      "name": "Gordy Wills",
      "email": "gordy.wills@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "ReceiverControl\\": "src/"
    }
  },
  "require": {
    "php": "^7.1",
    "beberlei/assert": "^2.9"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "@stable",
    "phpstan/phpstan": "@stable"
  },
  "scripts": {
    "phpcs": "./vendor/bin/php-cs-fixer fix --dry-run --verbose --config .php_cs.php",
    "phpcs-fix": "./vendor/bin/php-cs-fixer fix --verbose --config .php_cs.php",
    "phpstan": "./vendor/bin/phpstan analyse -l 1 src"
  }
}